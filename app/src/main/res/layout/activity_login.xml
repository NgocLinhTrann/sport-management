<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageNen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/mask_group" />

    <ImageView
        android:id="@+id/imageDN"
        android:layout_width="126dp"
        android:layout_height="132dp"
        android:layout_alignStart="@id/imageNen"
        android:layout_alignTop="@id/imageNen"
        android:layout_marginStart="140dp"
        android:layout_marginTop="78dp"
        app:srcCompat="@drawable/icondn" />

    <TextView
        android:id="@+id/textDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageDN"
        android:layout_alignStart="@id/imageDN"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="45dp"
        android:text="Đăng nhập"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDN"
        android:layout_alignStart="@id/textDN"
        android:layout_alignLeft="@id/imageNen"
        android:layout_marginStart="-85dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="32dp"
        android:text="Email"
        android:textColor="#7C7C7C"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmail"
        android:layout_alignLeft="@id/imageDN"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="imshuvo97@gmail.com"
        android:textColor="#7C7C7C"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmailAddress"
        android:layout_alignStart="@id/editTextEmailAddress"
        android:layout_marginStart="1dp"
        android:layout_marginTop="31dp"
        android:text="Password"
        android:textColor="#7C7C7C"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextPass"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPass"
        android:layout_alignStart="@id/textPass"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="............................" />

    <Button
        android:id="@+id/btDN"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPass"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-64dp"
        android:background="@drawable/round_button"
        android:radius="20dp"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btDNGoogle"
        app:backgroundTint="@null"
        android:layout_width="331dp"
        android:layout_height="50dp"
        android:layout_below="@id/btDN"
        android:layout_marginTop="85dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_google"
        android:drawableLeft="@drawable/ic_google"
        android:paddingHorizontal="5dp"
        android:radius="20dp"
        android:text="Đăng nhập bằng Google"
        android:textColor="#000000"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtQuenPass"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_below="@id/btDNGoogle"
        android:layout_alignStart="@id/imageNen"
        android:layout_alignTop="@id/btDN"
        android:layout_marginStart="234dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="39dp"
        android:layout_centerHorizontal="true"
        android:text="Bạn quên mật khẩu ?"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtDangKi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtQuenPass"
        android:layout_alignStart="@id/imageNen"
        android:layout_alignBottom="@id/btDN"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="-150dp"
        android:text="Bạn chưa có tài khoản?"
        android:textSize="16sp"
        android:textColor="#7C7C7C"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtDangKi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtQuenPass"
        android:layout_alignStart="@id/imageNen"
        android:layout_alignBottom="@id/btDN"
        android:layout_marginStart="273dp"
        android:layout_marginBottom="-150dp"
        android:text="Đăng kí"
        android:textColor="#3CB721"
        android:textSize="16sp"
        android:textStyle="italic" />
</RelativeLayout>
</ScrollView>
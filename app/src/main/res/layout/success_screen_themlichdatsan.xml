<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_thanhcong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thành công"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Lịch đặt của bạn đã được thêm vào hệ thống"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_below="@id/tv_thanhcong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        />

    <ImageView
        android:id="@+id/imv_thanhcong"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="#00FEFEFE"
        android:src="@drawable/ic_success" />

    <Button
        android:id="@+id/btn_khachang_datsanthanhcong_tieptuc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_thanhcong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/bg_btn_google"
        android:text="Tiếp tục"
        app:backgroundTint="#3ADA15" />
    <Button
        android:id="@+id/btn_khachang_datsanthanhcong_sankhac"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_google"
        app:backgroundTint="@color/red"
        android:layout_below="@id/btn_khachang_datsanthanhcong_tieptuc"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="Đặt thêm sân khác"/>

</RelativeLayout>
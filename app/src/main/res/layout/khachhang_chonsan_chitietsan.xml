<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btn_khachhang_chitietsan_goback"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Thông tin sân"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="25sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imv_khachhang_chitietsan_anhsan"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:layout_below="@+id/relative_toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-6dp"
        android:src="@drawable/sb5n" />

    <TextView
        android:id="@+id/tv_khachhang_chitietsan_tensan"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_khachhang_chitietsan_anhsan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Sân bóng 5 người"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tvTinhTrang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_khachhang_chitietsan_tensan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Tình trạng:"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_khachhang_chitietsan_tinhtrang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_khachhang_chitietsan_tensan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="25dp"
        android:text="Chưa thuê"
        android:textSize="17sp"
        android:textColor="#239B56"/>

    <TextView
        android:id="@+id/tv_khachhang_chitietsan_ChonGio"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTinhTrang"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_calendar"
        android:text="14/4/2023 19:00"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_khachhang_chitietsan_chonphut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_khachhang_chitietsan_ChonGio"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:text="45 phút"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_below="@id/tvTinhTrang"/>


    <TextView
        android:id="@+id/tv_khachhang_chitietsan_gia"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imv_khachhang_chitietsan_anhsan"
        android:layout_toRightOf="@id/tv_khachhang_chitietsan_tensan"
        android:layout_marginTop="40dp"
        android:text="300.000VND"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#D35400"/>

    <TextView
        android:id="@+id/tvThongTinSan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_khachhang_chitietsan_ChonGio"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Thông tin sân"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_thongtinsan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvThongTinSan"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:text="Sân 5 người với kích thước nhỏ gọn nhưng đầy đủ các tiện nghi để bạn có thể
thỏa sức chơi bóng. Sân được trang bị đèn chiếu sáng và mặt cỏ nhân tạo tốt nhất, đảm bảo
an toàn cho người chơi."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_khachhang_chitietsan_datsan"
        app:backgroundTint="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_thongtinsan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:background="@drawable/bg_btn_google"
        android:backgroundTint="#3CB371"
        android:text="Đặt sân"
        android:textSize="20dp" />

</RelativeLayout>
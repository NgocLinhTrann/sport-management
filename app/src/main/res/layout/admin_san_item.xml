<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ln_admin_douong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imv_admim_san_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/san_bong_5" />

        <RelativeLayout
            android:id="@+id/rl_admin_khachhang_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/tv_admin_san_tensan"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:textColor="@color/black"
                android:text="Sân bóng 5 người"
                android:textSize="20dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_admin_san_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="33dp"
            android:text="300.000"
            android:textSize="16dp"
            android:textColor="#ff002a" />
        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_right_arrow"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:layout_height="3dp"
        android:layout_below="@id/ln_admin_douong"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fram_douong"
    android:layout_width="172dp"
    android:layout_height="230dp"
    android:background="@drawable/framw_background_douong"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ImageButton
    android:id="@+id/imv_khachhang_chondouong_item"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="18dp"
    android:background="@color/white"
    android:scaleType="fitCenter"
    android:src="@drawable/sp_nuocsuoi" />

<TextView
    android:id="@+id/tv_khachhang_chondouong_item_tendouong"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:text="Nước suối 500ml"
    android:textAlignment="center"
    android:layout_below="@id/imv_khachhang_chondouong_item"
    android:textColor="@color/black"
    android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_khachhang_chondouong_item_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true"
            android:text="8.000VND"
            android:textColor="#D35400"
            android:textSize="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="44dp"
            android:layout_height="37dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentBottom="true"

            android:layout_toRightOf="@id/tv_khachhang_chondouong_item_gia"
            android:background="@drawable/bg_btn_google"
            android:drawableLeft="@drawable/baseline_add_24"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@color/green" />
    </RelativeLayout>
</FrameLayout>